<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white" >

    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/adapter_news_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:maxLines="2"
            android:textColor="#3f4440"
            android:textSize="15sp" />
        
        <TextView
            android:id="@+id/adapter_news_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:paddingLeft="10dp"
            android:maxLines="2"
            android:textColor="@color/color_a5a5a5"
            android:textSize="14sp" />
        
        <TextView
            android:id="@+id/adapter_news_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:paddingRight="10dp"
            android:textSize="14sp"
            android:textColor="@color/color_a5a5a5" />
    </LinearLayout>
    
    <ImageView
        android:id="@+id/adapter_news_item_photo"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_default_img" />
    

</LinearLayout>