<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_app_theme" >

        <TextView
            android:id="@+id/act_my_demand_info_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_back"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/act_my_demand_info"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/color_626262"
            android:textSize="16sp"
            android:text="类型：" />

        <TextView
            android:id="@+id/act_my_demand_info_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/color_626262"
            android:textSize="16sp"
            android:gravity="center_vertical" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/color_e2e2e2" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/color_626262"
            android:textSize="16sp"
            android:text="意向：" />

        <TextView
            android:id="@+id/act_my_demand_info_interest"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/color_626262"
            android:textSize="16sp"
            android:gravity="center_vertical" />
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/color_e2e2e2" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/color_626262"
            android:textSize="16sp"
            android:text="月收入：" />

        <TextView
            android:id="@+id/act_my_demand_info_monthly_income"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/color_626262"
            android:textSize="16sp"
            android:gravity="center_vertical" />
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/color_e2e2e2" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/color_626262"
            android:textSize="16sp"
            android:text="装修：" />

        <TextView
            android:id="@+id/act_my_demand_info_decoration"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/color_626262"
            android:textSize="16sp"
            android:gravity="center_vertical" />
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/color_e2e2e2" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/color_626262"
            android:textSize="16sp"
            android:text="朝向：" />

        <TextView
            android:id="@+id/act_my_demand_info_direction"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/color_626262"
            android:textSize="16sp"
            android:gravity="center_vertical" />
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/color_e2e2e2" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/color_626262"
            android:textSize="16sp"
            android:text="面积：" />

        <TextView
            android:id="@+id/act_my_demand_info_square"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/color_626262"
            android:textSize="16sp"
            android:gravity="center_vertical" />
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/color_e2e2e2" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/color_626262"
            android:textSize="16sp"
            android:text="户型：" />

        <TextView
            android:id="@+id/act_my_demand_info_house_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/color_626262"
            android:textSize="16sp"
            android:gravity="center_vertical" />
    </LinearLayout>

</LinearLayout>