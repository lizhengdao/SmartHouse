<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_eeeeee"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_app_theme" >

        <TextView
            android:id="@+id/act_proxy_sell_house_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_back"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="@string/act_message_back"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/act_proxy_sell_house"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 小区名称 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="小区名称："
                    android:textColor="@color/color_626262"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/act_proxy_sell_house_select_estate_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@drawable/ic_right_arrow"
                    android:drawablePadding="8dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center_vertical"
                    android:hint="请选择您的小区名称"
                    android:background="@color/white" />
            </LinearLayout>
            
            <!-- 房屋类型 -->
            <LinearLayout
                android:id="@+id/act_proxy_sell_house_select_house_type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="房屋类型："
                    android:textColor="@color/color_626262"
                    android:textSize="16sp" />
                
                <Space 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/act_proxy_sell_house_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="16dp"
                    android:drawableRight="@drawable/ic_down_arrow"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_626262"
                    android:textSize="16sp"
                    android:text="住宅" />
            </LinearLayout>
            
            <!-- 户型 -->
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:weightSum="3">
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="户型："
                    android:textColor="@color/color_626262"
                    android:textSize="16sp"/>
                <EditText 
                    android:id="@+id/act_proxy_sell_house_rooms"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:inputType="number"
                    android:gravity="center"
                    android:textColor="@color/color_626262"
                    android:textSize="16sp"/>
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="室"
                    android:textColor="@color/color_626262"
                    android:textSize="16sp"/>
                
                <EditText 
                    android:id="@+id/act_proxy_sell_house_halls"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:inputType="number"
                    android:gravity="center"
                    android:textColor="@color/color_626262"
                    android:textSize="16sp"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="厅"
                    android:textColor="@color/color_626262"
                    android:textSize="16sp"/>
                <EditText 
                    android:id="@+id/act_proxy_sell_house_toilets"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:inputType="number"
                    android:gravity="center"
                    android:textColor="@color/color_626262"
                    android:textSize="16sp"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="16dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_626262"
                    android:textSize="16sp"
                    android:text="卫"/>
                
            </LinearLayout>
            
            <!-- 楼层 -->
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:weightSum="2">
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="楼层：第"
                    android:textColor="@color/color_626262"
                    android:textSize="16sp"/>
                <EditText 
                    android:id="@+id/act_proxy_sell_house_which_floor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:inputType="number"
                    android:gravity="center"
                    android:textColor="@color/color_626262"
                    android:textSize="16sp"/>
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="楼  共"
                    android:textColor="@color/color_626262"
                    android:textSize="16sp"/>
                
                <EditText 
                    android:id="@+id/act_proxy_sell_house_total_floors"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:inputType="number"
                    android:gravity="center"
                    android:textColor="@color/color_626262"
                    android:textSize="16sp"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:text="楼"
                    android:textColor="@color/color_626262"
                    android:textSize="16sp"/>
            </LinearLayout>
            
            <!-- 面积 -->
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="面积："
                    android:textColor="@color/color_626262"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/act_proxy_sell_house_square"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:background="@color/white" />
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:text="㎡"
                    android:textColor="@color/color_626262"
                    android:textSize="16sp"/>
            </LinearLayout>
            
            <!-- 朝向 -->

            <LinearLayout
                android:id="@+id/act_proxy_sell_house_direction_llt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="朝向："
                    android:textColor="@color/color_626262"
                    android:textSize="16sp" />
                
                <Space 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/act_proxy_sell_house_direction_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="16dp"
                    android:drawableRight="@drawable/ic_down_arrow"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_626262"
                    android:drawablePadding="20dp"
                    android:textSize="16sp"
                    android:text="不限" />
            </LinearLayout>
            
            <!-- 装修程度 -->
            <LinearLayout
                android:id="@+id/act_proxy_sell_house_decoration_llt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="装修程度："
                    android:textColor="@color/color_626262"
                    android:textSize="16sp" />
                
                <Space 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/act_proxy_sell_house_decoration_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="16dp"
                    android:drawableRight="@drawable/ic_down_arrow"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_626262"
                    android:drawablePadding="20dp"
                    android:textSize="16sp"
                    android:text="不限" />
            </LinearLayout>
            
            <!-- 房屋信息 -->
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:weightSum="3">
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="房屋信息："
                    android:textColor="@color/color_626262"
                    android:textSize="16sp"/>
                <EditText 
                    android:id="@+id/act_proxy_sell_house_which_building"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:inputType="number"
                    android:gravity="center"
                    android:textColor="@color/color_626262"
                    android:textSize="16sp"/>
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="栋"
                    android:textColor="@color/color_626262"
                    android:textSize="16sp"/>
                
                <EditText 
                    android:id="@+id/act_proxy_sell_house_which_unit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:inputType="number"
                    android:gravity="center"
                    android:textColor="@color/color_626262"
                    android:textSize="16sp"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="单元"
                    android:textColor="@color/color_626262"
                    android:textSize="16sp"/>
                <EditText 
                    android:id="@+id/act_proxy_sell_house_which_num"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:inputType="number"
                    android:gravity="center"
                    android:textColor="@color/color_626262"
                    android:textSize="16sp"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="16dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_626262"
                    android:textSize="16sp"
                    android:text="号"/>
                
            </LinearLayout>
            
            <!-- 房源标题 -->
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:text="房源标题："
                    android:textColor="@color/color_626262"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/act_proxy_sell_house_source_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:textColor="@color/color_626262"
                    android:textSize="16sp" />
            </LinearLayout>
            
            <!-- 房源描述 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:text="房源描述："
                    android:textColor="@color/color_626262"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/act_proxy_sell_house_source_desc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:textColor="@color/color_626262"
                    android:textSize="16sp" />
            </LinearLayout>
            
            <!-- 姓名 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:text="姓名："
                    android:textColor="@color/color_626262"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/act_proxy_sell_house_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:textColor="@color/color_626262"
                    android:textSize="16sp" />
            </LinearLayout>
            
            <!-- 性别 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:text="性别："
                    android:textColor="@color/color_626262"
                    android:textSize="16sp" />
                
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <CheckBox
                    android:id="@+id/act_proxy_sell_house_sex_cbx"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="16dp"
                    android:background="@color/white"
                    android:checked="true"
                    android:button="@drawable/selector_sex" />
            </LinearLayout>
            
            <!-- 联系电话 -->
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:text="联系电话："
                    android:textColor="@color/color_626262"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/act_proxy_sell_house_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_626262"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/act_proxy_sell_house_commit"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/bg_login_btn"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>