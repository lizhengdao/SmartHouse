<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:layout_gravity="center_vertical"
    android:background="@color/color_eeeeee" xmlns:app="http://schemas.android.com/apk/res/cn.com.zzwfang">

    <ImageView
        android:id="@+id/adapter_search_house_artifact_avatar"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_broker_avatar_rect" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/adapter_search_house_artifact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_4c4c4c"
                android:textSize="18sp" />
            
            <TextView
                android:id="@+id/adapter_search_house_artifact_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_4c4c4c"
                android:textSize="15sp" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_a5a5a5"
                android:textSize="15sp"
                android:text="二手房：" />
            
            <TextView
                android:id="@+id/adapter_search_house_artifact_second_hand_houses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_a5a5a5"
                android:textSize="15sp"
                android:text="88" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_4c4c4c"
                android:textSize="15sp"
                android:text="套" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_66b978"
                android:textSize="15sp"
                android:text="好评率100%" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_a5a5a5"
                android:textSize="15sp"
                android:text="租房:" />
            
            <TextView
                android:id="@+id/adapter_search_house_artifact_rent_houses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_a5a5a5"
                android:textSize="15sp"
                android:text="88" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ff9000"
                android:textSize="15sp"
                android:text="套" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_a5a5a5"
                android:textSize="12sp"
                android:text="店铺访问量：" />
            
            <TextView
                android:id="@+id/adapter_search_house_artifact_access_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_a5a5a5"
                android:textSize="12sp"
                android:text="88" />
            
            <Space 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            
            <cn.com.zzwfang.view.AutoDrawableTextView
                android:id="@+id/adapter_search_house_artifact_consult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_phone_white"
                android:drawablePadding="4dp"
                android:background="@drawable/shape_round_corner_color_app_theme"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="我要咨询"
                app:left_width="20dp"
                app:left_height="20dp" />
            
            <cn.com.zzwfang.view.AutoDrawableTextView
                android:id="@+id/adapter_search_house_artifact_dial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_phone_white"
                android:drawablePadding="4dp"
                android:background="@drawable/shape_round_corner_color_app_theme"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="一键呼叫"
                app:left_width="20dp"
                app:left_height="20dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>