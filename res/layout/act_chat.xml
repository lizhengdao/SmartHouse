<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_app_theme" >

        <TextView
            android:id="@+id/act_chat_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_back"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="张三"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </FrameLayout>

    <cn.com.zzwfang.pullview.AbPullToRefreshView
        android:id="@+id/pull_chat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/lst_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/color_cecece"
            android:dividerHeight="1dp" />
    </cn.com.zzwfang.pullview.AbPullToRefreshView>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        
        <EditText 
            android:id="@+id/act_chat_content_edt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"/>
        
        <TextView 
            android:id="@+id/act_chat_send_tv"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="发送"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>