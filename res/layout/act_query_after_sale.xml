<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/cn.com.zzwfang"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_app_theme" >

        <TextView
            android:id="@+id/act_query_after_sale_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_back"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/act_query_after_sale_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </FrameLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <cn.com.zzwfang.view.PathImage
                    android:id="@+id/act_query_after_sale_avatar1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_mine_unlogin_avatar"
                    app:shape="circle" />
            <TextView 
                android:id="@+id/act_query_after_sale_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/act_query_after_sale_complain1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投诉"/>
            
            <TextView 
                android:id="@+id/act_query_after_sale_support1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点赞"/>
            
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <cn.com.zzwfang.view.PathImage
                    android:id="@+id/act_query_after_sale_avatar2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_mine_unlogin_avatar"
                    app:shape="circle" />
            <TextView 
                android:id="@+id/act_query_after_sale_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/act_query_after_sale_complain2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投诉"/>
            
            <TextView 
                android:id="@+id/act_query_after_sale_support2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点赞"/>
            
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <cn.com.zzwfang.view.PathImage
                    android:id="@+id/act_query_after_sale_avatar3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_mine_unlogin_avatar"
                    app:shape="circle" />
            <TextView 
                android:id="@+id/act_query_after_sale_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/act_query_after_sale_complain3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投诉"/>
            
            <TextView 
                android:id="@+id/act_query_after_sale_support3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点赞"/>
            
        </LinearLayout>
    </LinearLayout>
    
    <ListView
        android:id="@+id/act_query_after_sale_lst"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
