<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <FrameLayout 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dp">
        <View 
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#d5d5d5"
            android:layout_gravity="center_horizontal"/>
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_query_dot"
            android:layout_gravity="center_horizontal"/>
    </FrameLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        
        <TextView 
            android:id="@+id/adapter_query_after_sale_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:singleLine="true"
            android:textColor="@color/color_app_theme"
            android:textSize="16sp"/>
        
        <TextView 
            android:id="@+id/adapter_query_after_sale_operator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textColor="#a5a5a5"
            android:textSize="16sp"/>
        
        <TextView 
            android:id="@+id/adapter_query_after_sale_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textColor="#a5a5a5"
            android:textSize="16sp"/>
        
        <TextView 
            android:id="@+id/adapter_query_after_sale_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#787878"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>
